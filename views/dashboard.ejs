<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
</head>
<body>

  <%- include("partials/navbar") %>

  <div class="container mt-5">
    <div class="text-center mb-4">
      <h1 class="fw-bold">Welcome, <%= user.name %> ðŸ‘‹</h1>
      <p class="text-muted">Your email is: <%= user.email %></p>

      <% if (user && user.profile_img) { %>
        <div class="d-flex justify-content-center mt-3">
          <img 
            src="<%= user.profile_img %>" 
            alt="Profile Image" 
            class="rounded-circle shadow" 
            style="width: 150px; height: 150px; object-fit: cover;"
          />
        </div>
      <% } else { %>
        <p class="text-muted mt-3">No profile picture uploaded.</p>
      <% } %>
    </div>

    <div class="d-flex justify-content-center gap-3 mb-4 flex-wrap">
      <form action="/post/create" method="get">
        <button class="btn btn-primary">Create New Post</button>
      </form>
      <form action="/logout" method="post">
        <button class="btn btn-danger">Logout</button>
      </form>




      <% if(session.isAdmin){ %>
        <form action="/admin/post" method="get">
          <button class="btn btn-warning">Admin Dashboard</button>
        </form>
      <% } %>
    </div>
     <div class="d-flex justify-content-end my-4">
  <div class="card text-center shadow-sm" style="width: 18rem;">
    <div class="card-header bg-primary text-white">
      <h5 class="mb-0">Post Analytics</h5>
    </div>
    <div class="card-body">
      <div>
        <h3><%= totallikes %></h3>
        <p class="text-muted">Total Likes</p>
      </div>
      <div>
        <h3><%= totaldislikes %></h3>
        <p class="text-muted">Total Dislikes</p>
      </div>
    </div>
  </div>
</div>

    <hr />

    <h2 class="mb-4">Your Posts:</h2>

    <% if (posts.length === 0) { %>
      <div class="alert alert-info">You have zero posts.</div>
    <% } else { %>
      <div class="row">
        <% posts.forEach(post => { %>
          <div class="col-md-6">
            <div class="card mb-4 shadow-sm">
              <div class="card-body">
                <h4 class="card-title"><%= post.title %></h4>
                <p class="card-text text-truncate" style="max-height: 150px; overflow: hidden;"><%-post.content %></p>
                <small class="text-muted">Posted on: <%= new Date(post.created_at).toLocaleString() %></small>
                
                <div class="d-flex justify-content-end gap-2 mt-3 flex-wrap">
                  <form action="/post/delete" method="post">
                    <input type="hidden" name="postid" value="<%= post.id %>">
                    <button class="btn btn-outline-danger btn-sm">Delete</button>
                  </form>
                  <form action="/post/edit/<%= post.id %>" method="get">
                    <button class="btn btn-outline-primary btn-sm">Edit</button>
                  </form>
                  <form action="/post/<%= post.id%>" method="get">
                    <button class="btn btn-outline-success btn-sm">Read More</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

</body>
</html>
