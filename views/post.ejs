<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create Post</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
        }

        /* Removed the .post-form-container class to allow full width */
        .form-content {
            padding: 2.5rem;
            background-color: #fff;
            border-radius: 1rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.05);
        }

        .form-label {
            font-weight: 600;
            color: #495057;
        }

        #editor-container {
            height: 300px;
            border: 1px solid #ced4da;
            border-radius: 0.5rem;
            background-color: #fff;
        }
        
        .ql-toolbar.ql-snow {
            border-radius: 0.5rem 0.5rem 0 0;
            border-color: #ced4da;
        }

        .ql-container.ql-snow {
            border-radius: 0 0 0.5rem 0.5rem;
            border-color: #ced4da;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            font-weight: 600;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }
    </style>
</head>
<body>

    <div class="container-fluid py-5">
        <h2 class="text-center mb-5 fw-bold text-primary">üìù Create a New Post</h2>

        <form action="/post/create" method="POST" enctype="multipart/form-data" onsubmit="return submitPost()" class="form-content">
            
            <div class="mb-4">
                <label for="title" class="form-label">Post Title</label>
                <input type="text" name="title" class="form-control form-control-lg" id="title" required>
            </div>

            <div class="mb-4">
                <label for="image" class="form-label">Upload Images (max 5)</label>
                <input type="file" name="image" class="form-control" id="image" multiple accept="image/*">
            </div>

            <div class="mb-4">
                <label class="form-label">Content</label>
                <div id="editor-container"></div>
                <input type="hidden" name="content" id="hidden-content">
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Publish</button>
                <a href="/dashboard" class="btn btn-secondary btn-lg">Cancel</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

    <script>
        const quill = new Quill('#editor-container', {
            theme: 'snow',
            placeholder: 'Write your post here...',
            modules: {
                toolbar: [
                    [{ header: [1, 2, false] }],
                    ['bold', 'italic', 'underline'],
                    [{ list: 'ordered' }, { list: 'bullet' }],
                    ['image', 'code-block'],
                    ['clean']
                ]
            }
        });

        function submitPost() {
            const html = quill.root.innerHTML;
            document.getElementById('hidden-content').value = html;
            return true;
        }
    </script>
</body>
</html>