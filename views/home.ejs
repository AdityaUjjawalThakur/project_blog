<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home - Aditya Blogs</title>
 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
</head>
<body>

  <!-- Navbar -->
  <%- include("partials/navbar") %>
 

  <!-- Main Container -->
  <div class="container mt-5">

    <h1 class="text-center mb-4">ðŸ‘‹ Welcome to <strong>Aditya Blogs</strong></h1>

    <!-- Auth Buttons -->
    <div class="d-flex justify-content-center gap-3 mb-5">
      <form action="/login" method="get">
        <button class="btn btn-primary">Login</button>
      </form>
      <form action="/register" method="get">
        <button class="btn btn-success">Register</button>
      </form>
      <form action="/post/create" method="get">
        <button class="btn btn-warning">Write Blog</button>
      </form>
      <form action="/dashboard" method="get">
        <button class="btn btn-warning">Dashboard</button>
      </form>
    </div>

    <!-- Posts Section -->
    <% if (posts.length === 0) { %>
      <div class="alert alert-info text-center">
        No posts available yet. Be the first to write one!
      </div>
    <% } else { %>
      <% posts.forEach(post => { %>
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <h4 class="card-title"><%= post.title %></h4>
            <p class="card-text"><%= post.content.slice(0, 200) %>...</p>
            <a href="/post/<%=post.id%>"class="btn btn-sm btn-outline-primary">Read more</a>
            
            <p class="text-muted">
              by <%= post.Author %>
            </p>
          </div>
        </div>
      <% }) %>
    <% } %>

  </div>

</body>
</html>
