<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= posts.title %></title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<!-- Navbar -->
<%- include("partials/navbar") %>

<!-- Main Content -->
<div class="container mt-5">
  <% if (posts) { %>
    <div class="card shadow p-4">
      <h1 class="mb-3 text-primary fw-bold"><%= posts.title %></h1>
      <p class="text-muted mb-1">By <strong><%= posts.Author %></strong></p>
      <p class="text-muted"><small>Posted on: <%= new Date(posts.created_at).toLocaleString() %></small></p>
      <hr />

      <!-- Post Images -->
      <% if (posts.image_url && posts.image_url.length) { %>
        <div class="mb-4">
          <% posts.image_url.forEach(url => { %>
            <img src="<%= url %>" alt="Post Image" class="img-fluid rounded mb-3 shadow-sm w-100">
          <% }) %>
        </div>
      <% } %>

      <!-- Post Content -->
      <p class="fs-5 lh-lg"><%- posts.content %></p>

      <!-- Reaction Buttons -->
      <div class="d-flex gap-3 my-4">
        <form action="/react/<%= posts.id %>" method="post">
          <input type="hidden" name="reaction" value="like">
          <button type="submit" class="btn btn-outline-success">
            üëç Like (<%= likes %>)
          </button>
        </form>

        <form action="/react/<%= posts.id %>" method="post">
          <input type="hidden" name="reaction" value="dislike">
          <button type="submit" class="btn btn-outline-danger">
            üëé Dislike (<%= dislikes %>)
          </button>
        </form>
      </div>

      <!-- Comments Section -->
      <h3 class="mt-5">Comments</h3>
      <% if (comments.length === 0) { %>
        <p class="text-muted">No comments yet. Be the first to comment!</p>
      <% } else { %>
        <ul class="list-group mb-4">
          <% comments.forEach(comment => { %>
            <li class="list-group-item">
              <div class="d-flex justify-content-between align-items-center">
                <strong><%= comment.commenter_name %></strong>
                <small class="text-muted"><%= new Date(comment.created_at).toLocaleString() %></small>
              </div>
              <p class="mb-1"><%= comment.content %></p>

              <% if (comment.usercommentid === session.userID|| session.isAdmin) { %>
                <form action="/deletecomment/<%= comment.commentid %>/<%= posts.id %>" method="post" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                </form>
              <% } %>
            </li>
          <% }) %>
        </ul>
      <% } %>

      <!-- Comment Form -->
      <h4 class="mt-4">Leave a Comment</h4>
      <form action="/comment/<%= posts.id %>" method="post" class="mt-3">
        <div class="mb-3">
          <label for="comment" class="form-label">Your Comment</label>
          <textarea name="comment" id="comment" class="form-control" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Post Comment</button>
      </form>
    </div>
  <% } else { %>
    <div class="alert alert-warning text-center">No post found</div>
  <% } %>
</div>

</body>
</html>
